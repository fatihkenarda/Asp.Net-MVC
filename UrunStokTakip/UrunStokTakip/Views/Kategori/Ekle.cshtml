@model UrunStokTakip.Models.Kategori
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Ekle", "Kategori", FormMethod.Post))
{
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div  class="form-group">
                    <label>Kategori Ad</label>
                    <input type="text" name="Ad" class="form-control" required />
                </div>

                <div  class="form-group">
                    <label>Açıklama</label>
                    <input type="text" name="Aciklama" class="form-control" required />
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Ekle</button>
                <a href="/Kategori/Index">Kategori Listesi</a>
            </div>
        </div>
    </div>
}