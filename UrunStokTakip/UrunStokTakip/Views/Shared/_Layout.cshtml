<!DOCTYPE html>
<html lang="en">
<head>
    <title>Stok Takip</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Ürün Stok Takip</a>
            </div>
            <ul class="nav navbar-nav">
                @if (User.IsInRole("A"))
                {
                    <li><a href="/Kullanici/Index">Kullanıcı</a></li>
                    <li><a href="/TümSatislar/Index">Tüm Satışlar</a></li>
                    <li><a href="/Urun/KritikStok">Kritik Stok @Html.Action("StokCount","Urun")</a></li>
                }

                <li><a href="/Kategori/Index">Kategoriler</a></li>
                <li><a href="/Kullanici/Guncelle">@Session["Ad"] @Session["Soyad"]</a></li>
                <li><a href="/Urun/Index">Ürünler</a></li>
                @if (User.IsInRole("U"))
                {
                    <li><a href="/Satis/Index">Satışlar</a></li>
                    <li><a href="/Sepet/Index">Sepetim</a></li>
                }

                <li><a href="/Account/Logout">Çıkış</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

</body>
</html>
